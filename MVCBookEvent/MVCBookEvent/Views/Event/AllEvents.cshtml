@model List<BookEvent.Models.Event>

<h1>All Events</h1>

<table class="table">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Event Date</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.EventName</td>
                <td>@ev.EventDate.ToShortDateString()</td>
                <td>@ev.EventLocation</td>
                <td>
                    <a href="@Url.Action("Edit", "Event", new { id = ev.EventId })">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
